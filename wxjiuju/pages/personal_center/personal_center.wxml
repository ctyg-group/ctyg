<!-- 个人中心 -->
<view class="personal">
    <!-- 个人信息 -->
    <view class="information">
        <view class="head_portrait">
            <image class="userinfo-avatar" src="{{userInfo.avatarUrl}}"  bindtap='changeAvatar' background-size="cover"></image>
        </view>
        <view class="personal_text">
            <text class="nickname">
                   {{userInfo.nickName}}
                <text class="job">{{userInfo.nickName}}</text>
            </text>
        </view>
        <view class="cl"></view>
    </view>
    <!-- 内容-->
    <view class="menu">
        <!-- 我的工地 -->
        <navigator url="#">
            <view class="my_work_site">
                <image class="menu_icon" src="../../images/personal/personal_03.png"></image>
                <text class="my_text">我的工地</text>          
                <image class="dayu" src="../../images/personal/personal_06.png"></image>
                <text class="num">0</text>
            </view>
        </navigator>
        <!-- 我的收藏 -->
        <navigator url="../collection/collection">
            <view class="my_collection">
                <image  class="menu_icon" src="../../images/personal/personal_10.png"></image>
                <text class="my_text">我的收藏</text>
                <image class="dayu" src="../../images/personal/personal_06.png"></image>
            </view>
        </navigator>
        
        <!-- 意见反馈 -->
        <navigator url="../feedback/feedback">
            <view class="feedback">
                <image  class="menu_icon" src="../../images/personal/personal_14.png"></image>
                <text class="my_text">意见反馈</text>
                <image class="dayu" src="../../images/personal/personal_06.png"></image>
            </view>
        </navigator>
    </view>
</view> 