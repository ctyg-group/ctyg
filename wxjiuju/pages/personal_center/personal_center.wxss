page{
    padding: 0;
    margin: 0;
    font-family: "﻿AdobeHeitiStd-Regular";
    background: rgb(239,239,244);
}
.cl{
    clear: both;
}
.information{
    width: 100%;
    height: 94px;
    background: rgb(24, 19, 19);
    padding-top: 20px;
}

.information .head_portrait{
    width: 130rpx;
    height: 130rpx;
    margin-left: 0.81rem;
    margin-left: 0.81rem;
    margin-right: 0.5rem;
    border: solid 1px #ccc;
    float: left;
}

.information .userinfo-avatar{
    width: 130rpx;
    height: 130rpx;
}

.information .personal_text{
    width: 13rem; 
    float: left;
    color: rgb(170,170,170);
    margin-top: -10px;
    overflow: hidden;
    text-overflow:ellipsis;
    white-space: nowrap;
}

.information .personal_text .nickname{
    color: #fff;
    font-size: 36rpx;
    line-height: 20px;
    font-weight: 100;
}

.information .personal_text .job{
    color: rgb(170,170,170);
    font-size: 26rpx;
    line-height: 20px;
    font-weight: 100;
    overflow: hidden;
    text-overflow:ellipsis;
    white-space: nowrap;
}

