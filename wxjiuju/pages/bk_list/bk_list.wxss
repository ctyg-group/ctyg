/*引入tabBar样式  */
@import "../public/public.wxss";

.bk_nav{
    width: 100%;
    height: 2.62rem;
    background: #fff;
}
.bk_nav .bk_nav_li{
    width: 4.94rem;
    height: 2.62rem;
    line-height: 2.62rem;
    text-align: center;
    font-size: 0.87rem;
    color: rgb(53,53,53);
    float: left;
    border-bottom: solid 1px rgb(218,218,218);
    border-right: solid 1px rgb(218,218,218);
}
.bk_nav .bk_nav_li:last-child{
    border-right:none;
}

.bgcolor{
    background: rgb(234,234,234);
}

.bk_navbar{
    width: 100%;
    height: 1rem;
    padding: 0.5rem 0.87rem;

    background: rgb(239,239,244);
}

.bk_navbar .bk_navbar_list{
    float: left;
    margin-right: 1.62rem;
    color: rgb(169,169,169);
    font-size: 0.87rem;
}
.bk_navbar .bk_navbar_list:first-child{
    color: rgb(9,187,7);
}  

/* 装修列表 */

.title{
    margin-left: 0.6rem;
    padding-top: 1.12rem;
    font-size: 34rpx;
    color: rgb(249,156,50);
    font-weight: bold;
    padding-bottom: 0.62rem;
    letter-spacing: 2px;
}

.column_list{
    width: 100%;
    background: #fff;
}

.column_one{
    width:18.4rem;
    height:4rem;
    padding:0.8rem;   
}


.column_one .column_text{
    width:12.4rem;
    float: left;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 3;
    overflow: hidden;
    color: rgb(169,169,169);
}

.column_one .column_img{
    width: 5.37rem;
    height: 3.75rem;
    float: left;
    margin-right: 0.6rem;
}

.column_one .column_title{
    font-size: 17px;
    color: black;   
}
.column_one .column_content{
    font-size: 14px;
    color: rgb(169,169,169);
    line-height: 10px;
}

/* 查看更多 */
.see{
    padding-left: 0.6rem;
    font-family: "PingFangSC-Regular";
    font-size: 0.87rem;
    padding-top: 0.87rem;
    font-weight: normal;
    padding-bottom:0.87rem;
    color: rgb(106,127,165);
    text-align: center;
}
.more{
    width: 8px;
    height: 14px;
    margin-left: 20rpx;
    position: absolute;
    top: 0.18rem;
}

.menu {
    display: block;
    height: 100rpx;
    width: 100%;
    border-bottom: solid 1px rgb(217,217,217);
}
/*一级菜单*/
.menu dt {
    font-size: 30rpx;
    float:left;
    width: 24.7%;
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
    font-family: "MicrosoftYaHeiLight";
    border-left: solid 1px rgb(217,217,217);
    background-color: rgb(250,250,250);
    color: rgb(42,51,66);
}

.menu dt.color{
    color: rgb(38,181,80);
}
.menu dt image{
    width: 16rpx;
    height: 8rpx;
    margin-left:10rpx;
    margin-bottom:6rpx;
}

/*二级菜单外部容器样式*/
.menu_b dd{ 
    width: 100%; 
    left: 0;
    top:84rpx;
    z-index:999;
    height: 100%;
    background: rgb(240,239,245);
}

.menu dt.addmenucolor{
  background: rgb(234,234,234);
}
.menu dt.removemenucolor{
  color: black;
}
.menu_b ul{
  height: 100%;
  display: inline-block;
}
/*二级菜单普通样式*/
.menu_b li{
   display: block;
   width: 182rpx;
   height: 1.4rem;
   font-size: 26rpx; 
   line-height: 1.4rem;
   font-family: "MicrosoftYaHeiLight";
   color: rgb(179,179,180);
   float: left;
   text-align: center;
   margin-top: 20rpx;
   margin-bottom: 8rpx;
}
.menu_b li.bottom{
   margin-top: 20rpx;
}
.menu_b li span{
   display: inline-block;
   width: 180rpx;
   height: 0.8rem;
   line-height: 0.8rem;
}
/* 二级菜单最后边样式 */
.menu_b li .right{
   border-right:none; 
}
/* 显示与隐藏 */
.show {
    display: block;
    padding:0 20rpx;
 }
 .hidden {
  display: none;
 }

 /* 选中的样式 */
 .menu_b li.highlight{
    color: rgb(38,181,80);
    border-radius: 5rpx;
    border-right: none;
    width: 183rpx;
    margin-left: -1rpx;
 }

/* 列表 */
.details{
    width: 100%;
    background: #fff;
    margin-top: 17px;
    padding-bottom: 14px;
}
.details .details_box{
    width: 92%;
    height: 225px;
    margin-left: 4%;
    padding-top: 14px;
    margin-bottom: 26px;

}
.details .details_box .details_img{
    width: 100%;
    height: 225px;
    border-radius: 3px;
    border: solid 1px rgb(224,224,224);
}

.details_text{
    font-size: 0.98rem;
    margin-left: 0.8rem;
    line-height: 20px;
    color: rgb(0,0,0);
}

.style{
    font-size: 0.81rem;
    font-family: "﻿AdobeHeitiStd-Regular";
    margin-left: 0.8rem;
    line-height: 20px;
}

.morefontsize{
  font-size: 15px;
  position: relative;
}
