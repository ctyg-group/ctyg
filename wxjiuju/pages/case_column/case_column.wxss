/*引入tabBar样式  */
@import "../public/public.wxss";
/* pages/test/test.wxss */
.menu {
    display: block;
    height: 82rpx;
}
/*一级菜单*/
.menu dt {
    font-size: 32rpx;
    float:left;
    width: 33%;
    height: 82rpx;
    text-align: center;
    font-family: "MicrosoftYaHeiLight";
    border-left: solid 1px rgb(217,217,217);
    border-bottom: solid 1px rgb(217,217,217);
    background-color: #ffffff;
    color: rgb(42,51,66);
    line-height: 82rpx;
}

.menu dt.color{
    color: rgb(38,181,80);
}
.menu dt image{
    width: 16rpx;
    height: 8rpx;
    margin-left:10rpx;
    margin-bottom:6rpx;
}

/*二级菜单外部容器样式*/
.menu_b dd{ 
    width: 100%; 
    left: 0;
    top:84rpx;
    z-index:999;
    height: 100%;
    background: rgba(250,250,250,0.8);
    box-shadow: 0 2px 5px rgba(1,1,1,0.06);
}

.menu dt.addmenucolor{
  color: green;
  background: rgb(250,250,250);
  border-bottom: none;
}
.menu dt.removemenucolor{
  color: black;
}
.menu_b ul{
  height:100%;
  display:inline-block;
}
/*二级菜单普通样式*/
.menu_b li{
   display: block;
   width: 182rpx;
   height: 1.4rem;
   font-size: 26rpx; 
   line-height: 1.4rem;
   font-family: "MicrosoftYaHeiLight";
   color: rgb(0,0,0);
   float: left;
   text-align: center;
   margin-top: 28rpx;
}
.menu_b li.bottom{
   margin-top: 20rpx;
}
.menu_b li span{
   display: inline-block;
   width: 180rpx;
   height: 0.8rem;
   line-height: 0.8rem;
   border-right: solid 1rpx rgb(38,181,80);
}
/* 二级菜单最后边样式 */
.menu_b li .right{
   border-right:none; 
}
/* 显示与隐藏 */
.show {
    display: block;
    padding:0 20rpx;
 }
 .hidden {
  display: none;
 }

 /* 选中的样式 */
 .menu_b li.highlight{
    background-color: rgb(38,181,80);
    border-radius: 5rpx;
    color: #fff;
    border-right: none;
    width: 183rpx;
    margin-left: -1rpx;
 }

/* 列表 */
.details{
    width: 100%;
    background: #fff;
    margin-top: 17px;
    padding-bottom: 14px;
}
.details .details_box{
    width: 92%;
    height: 225px;
    margin-left: 4%;
    padding-top: 14px;
    margin-bottom: 26px;

}
.details .details_box .details_img{
    width: 100%;
    height: 225px;
    border-radius: 3px;
    border: solid 1px rgb(224,224,224);
}

.details_text{
    font-size: 0.98rem;
    margin-left: 0.8rem;
    line-height: 20px;
    color: rgb(0,0,0);
}

.style{
    font-size: 0.81rem;
    font-family: "﻿AdobeHeitiStd-Regular";
    margin-left: 0.8rem;
    line-height: 20px;
}
