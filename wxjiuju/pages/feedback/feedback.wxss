
.feedback{
    width: 100%;
}

.text_box{
    width: 18rem;
    min-height: 194px;  
    padding: 12px 1rem 12px 1rem;
}
   
.text_box button{
    width: 18rem;
    height: 42px;
    line-height: 42px;
    color: #fff;
    font-size: 36rpx;
    text-align: center;
    background-color: rgb(2,187,7);
    border: solid 1px rgb(2, 148, 0);
    border-radius: 5px;
}
