@import "../public/public.wxss";

.bk_details{
    background: #fff;
    padding: 17px 1.12rem;
}
.title .title_text{
    margin-bottom: 20px;
    color: black;
    font-size: 1.5rem;
}

.title .time{
    color: rgb(136,136,136);
    font-family: "PingFang-SC-Medium";
    font-size: 0.87rem;
    line-height:40px;
}

.title .author{
    color: rgb(87,107,149);
