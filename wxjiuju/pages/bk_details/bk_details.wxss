    line-height:40px;

}

.introduction{
    width: 100%;
    margin-top: 30px;
    font-family: "PingFang-SC-Medium";
    font-size: 16px;
    line-height: 25px;
    color: rgb(17,17,17);
    margin-bottom:20px;

}

.introduction .in_title{
    display: inline-block;
    width: 100%;
    font-size: 18px;
    font-family: "PingFang-SC-Heavy";
    font-weight: bold;
