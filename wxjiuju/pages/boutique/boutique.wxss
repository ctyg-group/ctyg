/* 全屋人性化定制 */
.custom{
    width: 750rpx;
    height: 739rpx;
    margin-top: 33rpx;
    background: #fff;
    padding-top: 42rpx;
}

.custom .custom_box{
    width: 750rpx;
    height: 410rpx;
    position: relative;
}
.custom .custom_box .custom_pro{
    width: 750rpx;
    height: 410rpx;
    position: absolute;
    left: 0;
    top: 0;
}
.custom .custom_box .custom_outbox{
    width: 116rpx;
    height: 404rpx;
    margin-left: 10rpx;
    float: left;
    background: rgba(255,255,255,0.8);
    
