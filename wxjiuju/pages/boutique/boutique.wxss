    font-size: 30rpx;
    font-weight: bold;
    margin: 0rpx auto;
}

.custom .custom_pro .pro_text{
    height: 83rpx;
    line-height: 83rpx;
}
.custom .custom_pro .sub_pro{
    width: 550rpx;
    margin-top: 18rpx;
    text-align: center;
    font-family: "PingFang-SC-Medium";
    font-size: 24rpx;
    color: rgb(49,49,49);
    line-height: 36rpx;
}

