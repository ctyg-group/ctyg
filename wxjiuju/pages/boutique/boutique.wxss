}
.custom .custom_box .custom_outbox:nth-child(1){
    margin-left: 0rpx;
}

.custom .custom_img{
    width: 750rpx;
    height: 390rpx;   
    z-index: 2;                                                                                
}

.custom .custom_box .custom_text{
    writing-mode: tb-rl;
    font-size: 28rpx;
    width: 80rpx;
    line-height: 80rpx;
    margin-top: 93rpx;
    font-family: "PingFang-SC-Regular";
}

.custom .custom_pro{
    width: 550rpx;
    height: 152rpx;
    text-align: center;
    font-family: "PingFang-SC-Heavy";
