/*引入tabBar样式  */
@import "../public/public.wxss";

page{
    width:100%;
    position: relative; 
  } 
.free_quote{
    width: 100%;
}
.offer{
  width: 18rem;
  height: 20.8rem;
  background: rgb(255, 247, 239);
  position: absolute;
  top:6.3rem;
  left: 50%;
  margin-left: -9rem;
  box-shadow: 0px 0px 0.6rem #cecccc;
  border-radius:0.2rem;
}
.offer .offer_body{
  position: relative;
  height: 20.8rem;
}
.offer .offer_body .offter_size{
  font-size: 0.8rem;
  position: relative;
  top: 0.8rem;
  margin-left: 1rem;
}
.offer .offer_body .offter_view{
  width: 16rem;
  height: 2.6rem;
  background: #ffffff;
  border: 1px solid rgb(255, 231, 206);
  border-radius:0.2rem;
  position: relative;
  margin-left: 1rem;
  top: 1.4rem;
  margin-bottom: 1rem;
}
.offer .offer_body .offter_view_button{
  width: 16rem;
  height: 2.6rem;
  border: none;
  border-radius:0.2rem;
  position: relative;
  margin-left: 1rem;
  top: 1.4rem;
  margin-bottom: 1rem;
}
.offer .offer_body .offter_view_button .offter_view_button_primary{
  height: 2.6rem;
  line-height: 2.6rem;
  font-size: 0.8rem;
}
.offer .offer_body .offter_view .offter_input{
  width: 14rem;
  position: absolute;
  top: 0;
  left: 0.5rem;
  height: 2.6rem;
  line-height: 2.6rem;
  font-size: 0.8rem;
}
.offer .offer_body .offter_view .offter_model{
  color: #777;
}
.offer .offer_body .offter_view .offter_text{
  position: absolute;
  top: 0;
  right: 0.5rem;
  height: 2.6rem;
  line-height: 2.6rem;
  font-size: 0.9rem;
  color: #777;
}

.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}

.modal-dialog {
  width: 540rpx;
  overflow: hidden;
  position: fixed;
  top: 50%;
  left: 0;
  z-index: 9999;
  background: #f9f9f9;
  margin: -180rpx 105rpx;
  border-radius: 36rpx;
}

.modal-title {
  padding-top: 50rpx;
  font-size: 36rpx;
  color: #030303;
  text-align: center;
  height: 60px;
  line-height: 60px;
}

.modal-content {
  padding: 50rpx 32rpx;
}

input-holder {
  color: #666;
  font-size: 28rpx;
}

.modal-footer {
  display: flex;
  flex-direction: row;
  height: 86rpx;
  border-top: 1px solid #dedede;
  font-size: 34rpx;
  line-height: 86rpx;
}
.btn-confirm {
  width: 100%;
  color: #00c20a;
  text-align: center;
}