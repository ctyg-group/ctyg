/* page/component/pages/imglist/imglist.wxss */
.imglist{
  display: flex;
  flex-wrap: wrap;
  justify-content:space-between;
  width:100%;  
  box-sizing:border-box;
}
.imglist_card{
  display: flex;
  flex-wrap: wrap;
  width:20%;
  align-items: center;
  padding:0 6px;
  box-sizing:border-box;
}
.imglist_card:first-child{
  padding-left: 0 !important;
}
.imglist_card:last-child{
  padding-right:0 !important;
}
.imglist_card_img{
  width:100%;
  height:20px;
}
.imglist_card_text{
  width:100%;
  height: 30px;
  font-size: 14px;
  text-align: center;
}
.imglist_card_text_text{
  color: red;
}
.imglist_card_text_1{
  color:#fff;
  background: #ff9b09;
  line-height: 30px;
}
.imglist_card_text_2{
  font-size: 22rpx;
}